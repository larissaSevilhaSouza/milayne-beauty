<footer class="relative w-full bg-[<%= site_colors.sencondary %>]">
  <section class=" w-full py-6">
    <div class="container mx-auto">
      <div class="flex flex-col lg:flex-row justify-between h-full">
        <div class="flex items-center justify-center">
          <% site_color = SiteColor.first %>
          <% if site_color %>
            <%= image_tag url_for(site_color.logo_footer.url), class: "w-52" %>
          <% else %>
            <%= image_tag "logo-top.svg", class: "w-52" %>
          <% end %>
        </div>

        <div class="h-full my-auto py-6 flex items-center">
          <div class="border w-full lg:h-16 border-[<%= site_colors.terciary %>] bg-[<%= site_colors.terciary %>]"></div>
        </div>

        <div class="flex flex-col items-center justify-center lg:justify-start">
          <h3 class="text-2xl poppins-bold text-[<%= site_colors.primary %>] pb-6 ">Informações</h3>
          <div class="text-left text-[<%= site_colors.primary %>] text-base poppins-regular">
            <% if @config&.adress.present? %>
              <div class="flex py-2 border-b border-[<%= site_colors.terciary %>]">
                <p class="w-24">Endereço:
                </p>
                <p class=""><%= @config.adress %></p>
              </div>
            <% end %>

            <% if @config&.phone.present? %>
              <div class="flex py-2 border-b border-[<%= site_colors.terciary %>]">
                <p class="w-24">Telefone:
                </p>
                <p class=""><%= @config.phone %></p>
              </div>
            <% end %>
            <% if @config&.phone.present? %>
              <div class="flex py-2">
                <p class="w-24">Email:
                </p>
                <p class="text-[<%= site_colors.primary %>]"><%= @config.email %></p>
              </div>
            <% end %>
          </div>
        </div>

        <div class="h-full my-auto py-6 flex items-center">
          <div class="border w-full lg:h-16 border-[<%= site_colors.terciary %>] bg-[<%= site_colors.terciary %>]"></div>
        </div>

        <% if @socials.present? %>
          <div class="flex flex-col items-center justify-center lg:justify-start">
            <h3 class="text-2xl rubik-bold text-[<%= site_colors.primary %>] pb-6 ">Redes Sociais</h3>
            <div class="flex gap-2">
              <% @socials.each do |social| %>
                <% if social.facebook.present? %>
                  <a href="<%= social.facebook %>" target="_blank">
                    <div class="border-2 border-[<%= site_colors.terciary %>] rounded-full w-[40px] h-[40px] flex items-center justify-center hover:scale-110 transition duration-300">
                      <%#= image_tag "icons2/icon_face.svg" %>
                      <svg width="12" height="20" viewBox="0 0 12 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path
                          d="M3.3188 6.5403H0.5V9.8105H3.3188V19.621H8.0167V9.8105H11.4387L11.775 6.5403H8.0167V5.1775C8.0167 4.3967 8.1971 4.0877 9.0643 4.0877H11.775V0H8.1971C4.8183 0 3.3188 1.2942 3.3188 3.773V6.5403Z"
                          fill="<%= site_colors.primary %>"
                        />
                      </svg>
                    </div>
                  </a>
                <% end %>

                <% if social.instagram.present? %>
                  <a href="<%= social.instagram %>" target="_blank">
                    <div class="border-2 border-[<%= site_colors.terciary %>] rounded-full w-[40px] h-[40px] flex items-center justify-center hover:scale-110 transition duration-300">
