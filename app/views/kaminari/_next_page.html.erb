<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>
  <span class="next hover:scale-110 transition duration-300 transform">
    <%= link_to_unless current_page.last?,
    t("views.pagination.next").html_safe,
    url,
    rel: "next",
    remote: remote,
    class: "border hover:border-none py-2 px-4 rounded text-[#{site_colors.primary}] hover:bg-[#{site_colors.primary}] hover:text-white transition duration-300" %>
  </span>
