<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>

  <span class="<%= 'py-1 px-4 text-white bg-[' + site_colors.primary + '] rounded ' if page.current? %> hover:scale-110 transition duration-300 transform">

    <%= link_to_unless page.current?, page, url, { remote: remote, rel: page.rel, class: "py-2 px-4 rounded border hover:border-none hover:text-white hover:bg-[#{site_colors.primary}] text-[#{site_colors.primary}] transition duration-300"} %>

  </span>
