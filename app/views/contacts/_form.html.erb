<%= form_for @contact, url: create_contact_path, html: { class: "flex flex-col gap-5" } do |f| %>
  <div class="flex flex-col md:flex-row gap-5 w-full">
    <div class="w-full">
      <%= f.text_field :name, class: "rounded border-gray-200 text-xs w-full", required: true, placeholder: "Nome Compeleto" %>
    </div>

    <div class="w-full">
      <%= f.email_field :email, class: "rounded border-gray-200 text-xs w-full", required: true, placeholder: "Email" %>
    </div>
  </div>

  <div class="flex flex-col md:flex-row gap-5 w-full">
    <div class="w-full">
      <%= f.text_field :subject, class: "rounded border-gray-200 text-xs w-full", required: true, placeholder: "Assunto" %>
    </div>

    <div class="w-full">
      <%= f.text_field :phone, class: "rounded border-gray-200 text-xs w-full mask--phone", required: false, placeholder: "Telefone" %>
    </div>
  </div>

  <div class="flex flex-col h-40">
    <%= f.text_area :message, class: "h-40 rounded border-gray-200 text-xs", required: true, placeholder: "Digite o assunto " %>
  </div>

  <div class="form__submit">
    <%= invisible_recaptcha_tags ui: :input, text: "Enviar email", class: "bg-[#53A92C] px-4 py-2 text-xs w-fit text-white rounded poppins-semibold uppercase hover:scale-110 transition duration-300" %>
  </div>
<% end %>
