<div class="w-full px-2 py-8 sm:px-4 min-h-[calc(100vh-411px)]">
  <% if @posts.present? %>
    <div class="flex flex-col h-full max-w-screen-xl mx-auto">
      <div class="text-[<%= site_colors.primary %>] border-b-2 pb-2 mb-8">
        <span>
          <p class="text-lg">Exibindo as notícias relacionadas à categoria:
            <strong><%= @category.name %></strong>
          </p>
        </span>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @posts.each do |post| %>
          <div class="w-full">
            <div class="post-card bg-[<%= site_colors.primary %>] shadow-md rounded-lg overflow-hidden">
              <%= link_to post_path(post), class: "block" do %>
                <div class="p-4">
                  <h2 class="text-xl text-white"><%= post.title %></h2>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="max-w-screen-xl p-4 mx-auto my-4 text-gray-800 bg-gray-300 rounded-md">
      Nenhuma notícia cadastrada na categoria
      <strong><%= @category.name %></strong>.
    </div>
  <% end %>
</div>
