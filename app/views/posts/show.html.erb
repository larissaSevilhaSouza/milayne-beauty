<section class="w-full">
  <div class="container mx-auto">
    <div class="px-2 py-8 sm:px-4">

      <div class="w-full flex justify-between text-[<%= site_colors.primary %>] poppins-regular border-b-[2px] pb-[8px] mb-8 uppercase">
        <p><%= link_to "Início", root_path %>
          /
          <%= link_to "Notícias", posts_path %></p>
      </div>
      <div class="flex flex-col max-w-screen-xl gap-8 mx-auto">
        <div class="flex gap-4 min-h-[calc(100vh-411px)]">
          <div class="w-full">
            <div class="flex flex-col gap-2">
              <h1 class="w-full text-2xl font-bold poppins-regular text-center text-[<%= site_colors.primary %>]"><%= @post.title %></h1>
              <h4 class="w-full text-md text-gray-700 poppins-regular text-center"><%= @post.summary %></h4>
              <span class="w-full text-gray-700 font-semibold poppins-regular text-center"><%= @post.formatted_date_publish %></span>
            </div>
            <div class="mt-8 ck-content poppins-regular text-justify text-gray-700" data-controller="embed">
              <%= raw @post.content %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% if @album.present? %>
      <%= render "album", album: @album %>
    <% end %>
  </div>
</section>
