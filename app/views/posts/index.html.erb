<section class="w-full bg-gray-100">
  <div class="container mx-auto">
    <div class="w-full px-2 py-8 sm:px-4 min-h-[calc(100vh-411px)]">
      <% if @posts.present? %>
        <div class="flex flex-col h-full max-w-screen-xl mx-auto">
          <div class="w-full flex justify-between text-[<%= site_colors.primary %>] border-b-[2px] pb-[8px] mb-8 uppercase">
            <h2 class="text-md md:text-lg md:karla-bold uppercase">ÚLTIMAS NOTÍCIAS</h2>
          </div>
          <div class="flex gap-4">
            <div class="w-full">
              <%= render "posts/posts", card_type: "posts" %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="max-w-screen-xl p-4 w-full my-4 text-gray-800 bg-gray-300 rounded-md">
          Nenhuma notícia cadastrada.
        </div>
      <% end %>
    </div>
  </div>
</section>
