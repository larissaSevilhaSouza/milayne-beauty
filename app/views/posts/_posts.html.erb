<% if card_type == "hero" %>
  <% @posts.take(1).each do |post| %>
    <%= render "posts/post_card", post: post, card_size: "hero_large" %>
  <% end %>
  <% if @posts.size > 1 %>
    <div class="flex flex-col h-full gap-8 md:flex-row lg:flex-col lg:w-2/5">
      <% @posts.drop(1).take(2).each do |post| %>
        <%= render "posts/post_card", post: post, card_size: "hero_small" %>
      <% end %>
    </div>
  <% end %>
<% elsif card_type == 'main' %>
  <% if @posts.size > 3 %>
    <div class="flex flex-col w-full gap-8">
      <% @posts.drop(3).each do |post| %>
        <%= render "posts/post_card", post: post, card_size: "main" %>
      <% end %>
      <div class="flex justify-center item-center">
        <%= link_to "VER TODAS",
        posts_path,
        class:
          "px-4 py-2 text-md text-gray-100 rounded-lg w-fit bg-purple-600 hover:bg-purple-500 active:bg-violet-700 focus:outline-none focus:ring focus:ring-violet-300 hover:shadow-md shadow-purple-500/50" %>
      </div>
    </div>
  <% end %>
<% elsif card_type == 'posts' %>
  <div class="flex flex-col w-full gap-8">
    <% @posts.each do |post| %>
      <%= render "posts/post_card", post: post, card_size: "main" %>
    <% end %>
    <div class="flex justify-center p-8 item-center">
      <%= paginate @posts %>
    </div>
  </div>
<% end %>
