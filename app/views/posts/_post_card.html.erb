<% if card_size == "hero_large" %>
  <%= link_to post_path(post.slug), class: "group overflow-hidden lg:h-full h-80 md:h-96 rounded-md lg:w-3/5" do %>
    <div class="relative w-full h-full">
      <%= image_tag post.cover.cover_large.url, class: "w-full h-full object-cover group-hover:scale-105 transition-all ease-in-out duration-300" %>
      <div class="absolute bottom-0 left-0 z-10 p-4">
        <h2 class="text-3xl font-bold text-gray-300 sm:text-gray-100"><%= post.title.truncate(100) %></h2>
        <p class="text-lg text-gray-200"><%= post.summary.truncate(180) %></p>
      </div>
      <span class="absolute bottom-0 w-full bg-gradient-to-t from-gray-800 h-1/2"></span>
    </div>
  <% end %>
<% elsif card_size == "hero_small" %>
  <%= link_to post_path(post.slug), class: "group overflow-hidden lg:h-full h-80 rounded-md" do %>
    <div class="relative h-full">
      <%= image_tag post.cover.cover_large.url, class: "object-cover h-full w-full group-hover:scale-105 transition-all ease-in-out duration-300" %>
      <div class="absolute bottom-0 left-0 z-10 p-4">
        <h2 class="text-xl font-bold text-gray-300 sm:text-gray-100"><%= post.title.truncate(100) %></h2>
        </p>
      </div>
      <span class="absolute bottom-0 w-full bg-gradient-to-t from-gray-800 h-1/2"></span>
    </div>
  <% end %>
<% elsif card_size == "main" %>
  <%= link_to post_path(post.slug), class: "lg:h-60 group transition-all ease-in-out duration-300 flex flex-col w-full overflow-hidden rounded-lg lg:max-h-80 md:flex-row md:gap-4 py-4 border-b" do %>
    <div class="overflow-hidden rounded-lg md:w-1/4 h-full drop-shadow-md">
      <%= image_tag post.cover.cover.url, class: "w-full h-full object-cover rounded-lg group-hover:scale-105 transition-all ease-in-out duration-300" %>
    </div>
    <div class="flex flex-col justify-between py-4 lg:py-0 lg:px-4 lg:w-3/4  text-[]<%= site_colors.terciary %> gap-2" style="font-family: <%= FontPrimary.first.category_font.title %>;">
      <div class="flex flex-col gap-3">
        <div class="text-sm font-semibold capitalize">
          <span class="text-[<%= site_colors.primary %>]">
            <%= post.post_category.name %>
          </span>
          <span class="text-[<%= site_colors.terciary %>]">
            /
          </span>
          <span class="text-sm w-full font-semibold"><%= post.formatted_date_publish %></span>
        </div>
        <div class="text-2xl font-semibold transition-all duration-300 ease-in-out group-hover:text-[<%= site_colors.primary %>] line-clamp-1"><%= post.title %></div>
        <% if post.summary.present? %>
          <p class="text-md line-clamp-3 text-[<%= site_colors.terciary %>]">
            <%= truncate(post.summary, length: 320) %><br>
          </p>
        <% end %>
      </div>
      <div class="w-fit bg-[<%= site_colors.primary %>] px-12 py-1 text-white rounded hover:scale-110 transition-all ease-in-out duration-300">Ver</div>
    </div>
  <% end %>
<% end %>
