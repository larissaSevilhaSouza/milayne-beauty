<div class="container mx-auto p-4">
  <% if @ox.present? %>
    <h1 class="text-3xl font-bold mb-2 text-center">Oxtoplatia</h1>
    <div class="mx-auto w-16 h-1 bg-blue-500 mb-4"></div>
    <div class="space-y-4">
      <% @ox.each do |ox| %>
        <div class="flex items-start space-x-4">
          <% if ox.photo.present? %>
            <div class="relative">
              <%= image_tag ox.photo_url, class: "w-[220px] h-[290px] object-cover rounded-lg border-2 border-transparent" %>
              <div class="absolute top-0 left-0 w-full h-full rounded-lg border-4 border-blue-500 blur-sm"></div>
            </div>
          <% end %>
          <div class="flex-1 mt-12">
            <p><%= ox.text %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %> 

  <% if @gallery_ox.present? %>
    <div class="flex flex-wrap space-x-4">
      <% @gallery_ox.each do |photo| %>
        <div class="relative mb-4">
          <%= image_tag photo.photo.url, class: "w-[90px] h-[100px] object-cover rounded-lg border-2 border-transparent" %>
          <div class="absolute top-0 left-0 w-full h-full rounded-lg border-4 border-blue-500 blur-sm"></div>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="mt-6">
     <%= link_to "Galeria Oxtoplastia", gallery_ox_path, class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
  </div>
</div>