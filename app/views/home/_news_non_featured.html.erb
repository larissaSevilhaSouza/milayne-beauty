<% if @non_featured_posts.present? %>
  <section class="w-full py-8">
    <div class="container mx-auto">
      <div class="w-full mt-8">
        <div class="w-full flex justify-between items-center text-[<%= site_colors.primary %>] border-b-[2px] pb-[8px] mb-8 uppercase">
          <h2 class="text-md md:text-lg uppercase"  style="font-family: <%= FontPrimary.first.category_font.title %>;">Ultimas Not√≠cias</h2>
          <h5 class="text-md md:text-lg" style="font-family: <%= FontPrimary.first.category_font.title %>;">
            <%= link_to "Ver mais", posts_path %>
          </h5>
        </div>
        <div class="flex flex-col sm:flex-row lg:flex-col gap-4 h-full">
          <% @non_featured_posts.first(3).each do |post| %>
            <%= link_to post_path(post.slug), class: "lg:h-fit min-h-60 group transition-all ease-in-out duration-300 flex flex-col lg:flex-row w-full overflow-hidden lg:max-h-80 lg:gap-4 py-4 border-b" do %>
              <%= image_tag post.cover.url, class: "w-full h-auto object-cover rounded group-hover:scale-105 transition-all ease-in-out duration-300 drop-shadow-md lg:w-1/4 border" %>

              <div class="flex flex-col justify-between py-4 lg:py-0 lg:px-4 lg:w-3/4  text-[]<%= site_colors.terciary %> gap-2" style="font-family: <%= FontPrimary.first.category_font.title %>;">
                <div class="flex flex-col gap-3">
                  <div class="text-sm font-semibold capitalize">
                    <span class="text-[<%= site_colors.primary %>]">
                      <%= post.post_category.name %>
                    </span>
                    <span class="text-[<%= site_colors.terciary %>]">
                      /
                    </span>
                    <span class="text-sm w-full font-semibold"><%= post.formatted_date_publish %></span>
                  </div>
                  <div class="text-2xl font-semibold transition-all duration-300 ease-in-out group-hover:text-[<%= site_colors.primary %>] line-clamp-1"><%= post.title %></div>
                  <% if post.summary.present? %>
                    <p class="text-md line-clamp-3 text-[<%= site_colors.terciary %>]">
                      <%= truncate(post.summary, length: 320) %><br>
                    </p>
                  <% end %>
                </div>
                <div class="w-fit bg-[<%= site_colors.primary %>] px-12 py-1 text-white rounded hover:scale-110 transition-all ease-in-out duration-300">Ver</div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
<% end %>
