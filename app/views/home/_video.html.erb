<% if @videos.present? %>
  <section class="w-full pb-6">
    <div class="container mx-auto">
      <div class="w-full mt-8">
        <div class="w-full flex justify-between text-[<%= site_colors.primary %>] border-b-[2px] pb-[8px] mb-8 uppercase">
          <h2 class="text-md md:text-lg md:karla-bold uppercase">VÃ­deos</h2>
          <h5 class="text-md md:text-lg md:karla-bold">
            <%= link_to "Ver mais", videos_path %>
          </h5>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-8">
          <% @videos.each do |video| %>
            <div class="w-full h-52 relative rounded bg-slate-200 overflow-hidden group">
              <%= link_to video_path(slug: video.slug), class: "block w-full h-full absolute top-0 left-0 z-20" do %>
                <span class="sr-only"><%= video.title %></span>
              <% end %>
              <div class="relative h-full group-hover:scale-105 transition-all ease-in-out duration-300">
                <iframe class="w-full h-full" src="https://www.youtube.com/embed/<%= video.code %>" allowfullscreen></iframe>
              </div>
              <div class="absolute z-10 bottom-0 bg-gradient-to-t from-[<%= site_colors.primary %>] rounded w-full transition-all ease-in-out duration-300">
                <div class="text-white md:text-xl p-2 md:p-4 w-full poppins-medium"><%= video.title %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
<% end %>
