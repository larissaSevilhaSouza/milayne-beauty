<div class="container mx-auto p-4">
  <% if @gallery_ox.present? %>
    <h1 class="text-3xl font-bold mb-2 text-center">Galeria de Fotos</h1>
    <div class="mx-auto w-16 h-1 bg-blue-500 mb-4"></div>
    <div class="flex flex-wrap space-x-4">
      <% @gallery_ox.each do |photo| %>
        <div class="relative mb-4">
          <!-- Aqui, o 'data-fancybox' e 'data-caption' permitem o uso do Fancybox -->
          <a href="<%= photo.photo.url %>" data-fancybox="gallery" data-caption="Foto da galeria">
            <%= image_tag photo.photo.url, class: "w-[90px] h-[100px] object-cover rounded-lg border-2 border-transparent" %>
          </a>
          <div class="absolute top-0 left-0 w-full h-full rounded-lg border-4 border-blue-500 blur-sm"></div>
        </div>
      <% end %>
    </div>
  <% end %>
  
  <!-- BotÃ£o de Voltar -->
  <div class="mt-6">
    <%= link_to "Voltar", :back, class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
  </div>
</div>
 