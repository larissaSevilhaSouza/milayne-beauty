<div class="flex flex-col container mx-auto">
  <div class="flex flex-col lg:flex-row gap-7">
    <div class="aspect-square mb-3 relative w-full lg:w-1/2">
      <%= image_tag(@secretary.photo? ? @secretary.photo.url : "avatar.png", class: "w-full aspect-square object-cover border rounded") %>
      <div class="absolute z-10 bottom-0 bg-gradient-to-t from-[<%= site_colors.primary %>] rounded w-full transition-all ease-in-out duration-300">
        <div class="text-white md:text-xl p-2 md:p-4 w-full poppins-medium capitalize"><%= @secretary.name_secretary %></div>
      </div>

    </div>
    <div class="w-full lg:w-1/2 text-md leading-relaxed mt-4 mb-4 text-[<%= site_colors.terciary %>]">
      <p class=" poppins-regular"><%= @secretary.summary.html_safe %></p>
    </div>

  </div>
  <div class="text-md leading-relaxed mt-4 mb-4 text-[<%= site_colors.terciary %>]">
    <p><%= @secretary.description.html_safe %></p>
  </div>
</div>
<% if @secretary.archive_secretaries.any? %>
  <section class="w-full bg-white py-8">
    <div class="flex flex-col">
      <div class="w-full flex justify-between text-[<%= site_colors.primary %>] border-b-[2px] pb-[8px] mb-8 uppercase">
        <h3>Arquivos</h3>
      </div>
      <div class="w-full overflow-x-auto">
        <table class="w-full bg-white border border-gray-200">
          <thead>
            <tr>
              <th class="py-2 px-1 md:px-4 border-b bg-gray-100 text-left">Arquivo</th>
              <th class="py-2 px-1 md:px-4 border-b bg-gray-100 text-left">Baixar</th>
            </tr>
          </thead>
          <tbody>
            <% @secretary.archive_secretaries.each do |archive| %>
              <tr>
                <td class="py-2 px-1 md:px-4 border-b">
                  <a href="<%= archive.archive.url %>" download class="text-[<%= site_colors.primary %>] hover:text-blue-700">
                    <%= archive.title %>
                  </a>
                </td>
                <td class="py-2 px-1 md:px-4 border-b">
                  <a href="<%= archive.archive.url %>" download class="text-[<%= site_colors.primary %>] hover:text-blue-700">
                    <%= image_tag "icons2/icon_download.svg" %>
                  </a>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
<% end %>
